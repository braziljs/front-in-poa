const ingressURL = "https://www.sympla.com.br/evento/frontinpoa-2023/2208504";
const c4pURL = 'https://forms.gle/1ARUc7nHxkyXsdZ58';
---

<section class="section section-about" id="about">
    <div class="wrapper">
        <h2 class="section-title">
            Você não pode
            <br />
            perder o <span class="section-title-highlight">Front in POA!</span>
        </h2>
        <div class="about-text" itemprop="description">
            <p>
                O Front-In-Poa é um evento de Front-End altamente conceituado no sul do Brasil,
                oferecendo acesso ao aprendizado, a inspiração e o networking,
                tornando-se uma experiência valiosa para qualquer pessoa interessada no desenvolvimento de interfaces web e móveis.
            </p>
            <p>
                Portanto, não perca a chance de participar e se beneficiar desse encontro dinâmico e enriquecedor.
            </p>
        </div>
    </div>
    <div class="section-about-tail">
        <a
            href={c4pURL}
            class="section-about-call-action-link call-action-link"
            target="_blank">
            <span class="call-action-text">
                <!-- Te inscreve -->
                Enviar Palestra
            </span>
        </a>
    </div>
</section>

<style>
    .about-text p {
        text-align: center;
    }
</style>